
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/adminbalo/Views/Shared/Adminlayout.cshtml";
}

@using websiteBALO.Models
@model List<LUONG>

<div class="container-fluid">
    <div class="">
        <div class="">
            <h1 class="page-header">
                Lương nhân viên
            </h1>
            <ol class="breadcrumb" style="font-size:20px">
                <li>
                    <i class="fa fa-dashboard"></i> <a href="@Url.Action("index","Admin")">Tổng quan</a>
                </li>
                <li>
                    <i class="fa fa-money"></i> Lương
                </li>
            </ol>
        </div>
    </div>
    <div style="margin:10px">
     
        <a class="btn btn-primary" href="@Url.Action("ThanhToanLuong", "quanlyluong")">Tính lương</a>
        @*<a class="btn btn-primary" href="@Url.Action("khen", "KhenThuong")">Khen Thưởng</a>*@
    </div>
    <div class="table-responsive">
        <table id="table-taikhoan" class="table  table-striped table-hover table-bordered ">
            <thead>
                <tr class="success">
                    <th>Mã nhân viên</th>
                    <th>Lương tối thiểu</th>
                    <th>Hệ số lương</th>
                    <th>Phụ cấp CV</th>
                    <th>Tiền bảo hiểm</th>
                    <th>Tổng Lương</th>
                    <th>Số bảng lương: @Model.Count</th>
                </tr>
            </thead>
            <tbody style="font-size:20px">
                @{
                    foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.MaLuong</td>
                            <td>
                                @string.Format("{0:#,#}", @item.LuongToiThieu).Replace(",", ",")
                            </td>
                            <td>
                                @item.HeSoLuong
                            </td>
                            <td>
                                @item.PhuCap
                            </td>
                            <td>
                                <table class="table table-bordered">
                                    <tr><th>XH</th><th>YT</th><th>TN</th></tr>
                                    <tr>
                                        <td>@item.BHXH</td>
                                        <td>@item.BHYT</td>
                                        <td>@item.BHTN</td>
                                    </tr>
                                </table>
                            </td>
                            <td>
                                @item.TongLuong
                            </td>
                            <td>
                                <a class="btn btn-warning" href="@Url.Action("SuaBangLuong", "QuanLyLuong", new { @id = @item.NhanVien_MNV })"><i class="fa fa-pencil-square-o x5" aria-hidden="true"></i>Sửa</a>
                                <a class="btn btn-info" href="@Url.Action("ThanhToanMotNhanVien", "QuanLyLuong", new { @id = @item.NhanVien_MNV })">Tính lương</a>
                                <a class="btn btn-primary" href="@Url.Action("QuaTrinhTangLuong", "QuanLyLuong", new  {@id = @item.NhanVien_MNV })">Quá trình lương</a>
                            </td>
                        </tr>

                    }

                }
            </tbody>
        </table>
    </div>
</div>


