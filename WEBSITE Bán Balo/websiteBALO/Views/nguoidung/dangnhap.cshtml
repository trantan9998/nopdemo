<!DOCTYPE html>
<html>
<head>
    <title>ĐĂNG NHẬP</title>
    <link href="~/Content/dangnhap.css" rel="stylesheet" />
</head>
<body>
    @{
        ViewBag.Title = "dangnhap";
        Layout = "~/Areas/adminbalo/Views/Shared/_Layout.cshtml";

    }
    @using (@Html.BeginForm())
    {
        <center>
            <div class="dangnhap" style="background-image: url('../../hinh/11925.jpg'); width: 460px; height: 600px;border-radius:10%;">

                <img src="~/hinh/logo11.png" style="width:260px;height:120px">
                <br /><br />
                <div style="opacity:0.6;background-color:Highlight;height:40px;border-radius:50px;padding:5px;width:60%;">
                    @Html.TextBox("txttaikhoan", "", htmlAttributes: new { @placeholder = "Tên Tài Khoản..." })
                </div>
                <br />
                <div style="opacity:0.6;background-color:Highlight;height:40px;border-radius:50px;padding:5px;width:60%">
                    @Html.Password("txtmatkhau", "", htmlAttributes: new { @placeholder = "Mật khẩu..." })
                </div>
                <br />
                <div class="dangnhapAA">
                    <input type="submit" id=" btnsubmit" name="btnsubmit" value="ĐĂNG NHẬP" style="margin-top:20px;background-color:aliceblue;opacity:0.8;border-radius:10px;width:150px;height:40px;font-size:20px;">
                </div>
                <br />

                <h3 style="color:navy">@ViewBag.thongbao</h3>
                <h3 style="color:red">@ViewBag.thongbao1</h3>
                <br />
                <div class="quaylai">
                    <a href="@Url.Action("Index","Home")" style="color:white"> ⏪Quay lại</a>
                </div>
                <div class="dangky">
                    <a href="@Url.Action("dangky","nguoidung")" style="color:white">⏩ĐĂNG KÝ</a>
                </div>

            </div>
        </center>
    }
</body>
</html>